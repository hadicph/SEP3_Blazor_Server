            </li>
        </AuthorizeView>
        <AuthorizeView Policy="doctor">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="Add_User">
                    <span class="oi oi-plus" aria-hidden="true"></span> Add User
                </NavLink>
            </li>
            <li class="nav-item px-3">
                            <NavLink class="nav-link" href="Users_Records">
                                <span class="oi oi-list-rich" aria-hidden="true"></span> Users Records
                            </NavLink>
                        </li>
        </AuthorizeView>

        <AuthorizeView Policy="admin">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="Users">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Users
                </NavLink>
            </li>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}